<%= form_for(@jury_form) do |f| %>


  <div class="field">
    <%= f.label :measure_id %><br />
    <% cg = MeasureGroup.find(@jury.measure_group_id) %>
    <% cg.measures.each do |criteria| %>
      <%= criteria.name %>:
      <%= f.number_field :criteria_id %>
    <% end %>
    <p>
    For each criteria a name/score will be shown, this is currently bugging
  </div>

  <div class="field">
    <%= f.label :comments %><br />
    <%= f.text_field :comments %>
  </div>
  <div class="field">
    <%= f.label :final_assessment %><br />
    <%= f.text_field :final_assessment %>
  </div>
  <div class="actions">
    <%= f.submit "Submit Jury"%>
  </div>

<% end %>
