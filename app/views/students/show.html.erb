<p id="notice"><%= notice %></p>
<div>
  <p>
    <b>Name:</b>
    <%= @student.name %>

    <b>Email:</b>
    <%= @student.email %>
  </p>

  <p>
    <b>Instructor:</b>
    <%= Instructor.find(@student.instructor_id).name rescue 'this student has no instructor' %>

    <b>Instrument:</b>
    <%= @student.instrument %>

    <b>Major:</b>
    <%= @student.major %>
  </p>

  <p>
    <b>Graduation year:</b>
    <%= @student.graduation_year %>

    <b>Course Number:</b>
    <%= @student.course_num %>
  </p>
  
  <%= render 'repertoire' %>

  
</div>

<div>
  <%= link_to 'Edit', edit_student_path(@student) %> |
  <%= link_to 'Back', students_path %> |
  <%= link_to 'Applied Study Forms', student_applied_study_forms_path(@student) %> |
  <%= link_to 'View Past Juries', '#' %>
</div>
