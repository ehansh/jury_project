<% if current_user.is_a? Student %>
  Sorry, you're not allowed to see this as a student!
<% else %>
<p id="notice"><%= notice %></p>

<div>
  <div id="tabs">
    <ul class="nav nav-tabs" data-tabs="tabs">
      <li class="active"><a href="#home" data-toggle="tab">Instructor Information</a></li>
      <li><a href="#students" data-toggle="tab">Students</a></li>
   </ul>
  </div>

  <div id="my-tab-content" class="tab-content">

    <div class="tab-pane active" id="home">
      <%= render 'info' %>
      <%= button_to 'Edit', edit_instructor_path(@instructor), method: 'get' %>
    </div>

    <div class="tab-pane" id="students">
      <%= create_student_table(@instructor) %>
      <%= render 'add_student_form' %>
    </div>
  </div>
</div>
<% end %>