<%= form_for(@jury_form) do |f| %>


  <div class="field">
    <%= f.label :measure_id, "Criteria:" %><br />
    <% cg = @jury.measure_group %>
    <% cg.measures.each do |criteria| %>
      <%= criteria.name %>:
      <%= f.number_field :criteria_id %>
    <% end %>
    !!!for each score save the param to an array, then update the scores using that array!!!

    <p>
  </div>

  <div class="field">
    <%= f.label :comments %><br />
    <%= f.text_field :comments %>
  </div>
  <div class="field">
    <%= f.label :final_assessment %><br />
    <%= f.text_field :final_assessment %>
  </div>
  <div class="actions">
    <%= f.submit "Submit Jury"%>
  </div>

<% end %>
